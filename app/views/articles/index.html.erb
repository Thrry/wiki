

  <h1>Toutes les articles</h1>


  <% @articles.each do |article| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title"><%= article.title %></h2>
      </div>
      <div class="panel-body">
        <%= article.content.first(100) %>
        <%= link_to "more", article_path(article), class: "btn btn-default btn-small" %>

      </div>
    </div>
  <% end %>



  <%=link_to "Write a new article", new_article_path, class: "btn btn-large btn-default" %>
